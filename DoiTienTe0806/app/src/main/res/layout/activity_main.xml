<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#042443"
    tools:context=".MainActivity">




    <EditText
        android:id="@+id/editText_money"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border_text"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_from"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_money" />

    <Spinner
        android:id="@+id/spinner_to"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginStart="208dp"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_money" />

    <Button
        android:id="@+id/button_switch"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_swap_horiz_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/spinner_from"
        app:layout_constraintTop_toBottomOf="@+id/editText_money" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_chevron_right_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/spinner_to"
        app:layout_constraintTop_toBottomOf="@+id/editText_money" />

    <TextView
        android:id="@+id/txt_from"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_to"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_to"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="33sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_detail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_detail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>